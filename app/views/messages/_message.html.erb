<div class="message mb-3 <%= 'me' if message.user == current_user %>">
  <div class="content-container">
    <div class="content">
      <%= message.content %>
    </div>
    <div class="author">
      <span class="activity-status user-<%= message.user_id %>">
        .
      </span>
      <%= message.user.email %>
    </div>
  </div>
</div>