
<% if user_signed_in? %>

  <h1>Friends LIST</h1>

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= "#{friend.first_name} #{friend.last_name} "%> </td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= link_to 'Show', friend_path(friend), class:"btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-outline-warning btn-sm" %></td>
          <td><%= link_to 'Destroy', friend, class:"btn btn-outline-danger btn-sm", method: :delete, 
              data: { confirm: 'Are you sure?' } %></td>
          
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>

<% else %>
  <h1>Home#index</h1>
  <p>Find me in app/views/home/index.html.erb</p>

<% end %>